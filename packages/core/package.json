{
  "name": "@ootmm/core",
  "version": "0.0.1",
  "scripts": {
    "build": "tsx ./lib/build.ts",
    "start": "tsx ./lib/cli.ts",
    "start:config": "tsx ./lib/cli.ts --config config.yml",
    "test": "vitest run --reporter=dot",
    "bench": "vitest bench",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ootmm/data": "*",
    "@ootmm/tools": "*",
    "crc-32": "^1.2.2",
    "pngjs": "^7.0.0",
    "uint8array-extras": "^1.4.0",
    "yaz0": "^4.0.2"
  },
  "main": "lib/combo/index.ts",
  "devDependencies": {
    "@types/pngjs": "^6.0.5",
    "fast-xml-parser": "^4.5.0",
    "type-fest": "^4.26.1"
  },
  "files": [
    "dist/data"
  ],
  "license": "MIT",
  "private": "true",
  "nx": {
    "namedInputs": {
      "ts": [
        "{projectRoot}/lib/**/*",
        "{projectRoot}/tsconfig.json"
      ]
    },
    "targets": {
      "build": {
        "inputs": [
          "ts",
          "{workspaceRoot}/third_party/**/*",
          "{workspaceRoot}/roms/**/*",
          "{projectRoot}/node_modules/**/*",
          "{projectRoot}/data/**/*",
          "{projectRoot}/include/**/*",
          "{projectRoot}/src/**/*",
          "{projectRoot}/CMakeLists.txt",
          { "env": "VERSION" },
          { "env": "NODE_ENV" }
        ],
        "outputs": [
          "{projectRoot}/dist/**/*",
          "{projectRoot}/include/combo/custom.h"
        ]
      },
      "test": {
        "inputs": [
          "ts",
          "{projectRoot}/tests/**/*"
        ],
        "dependsOn": [
          "build"
        ]
      },
      "start": {"dependsOn": ["build"]},
      "start:config": {"dependsOn": ["build"]}
    }
  }
}
