{
  "name": "@ootmm/gui",
  "version": "0.0.1",
  "description": "The graphical OoTMM generator widget",
  "type": "module",
  "main": "src/app/index.ts",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && tsx ./post-build.ts",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OoTMM/gui.git"
  },
  "author": "Nax",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OoTMM/gui/issues"
  },
  "homepage": "https://github.com/OoTMM/gui#readme",
  "dependencies": {
    "@ootmm/core": "*",
    "clsx": "^2.1.1",
    "preact": "^10.28.4",
    "react-ga4": "^2.1.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.3",
    "@tailwindcss/vite": "^4.2.1",
    "rollup-plugin-visualizer": "^7.0.0"
  },
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ],
      "env": [
        {
          "env": "VERSION"
        },
        {
          "env": "VERSION_SUFFIX"
        },
        {
          "env": "STATIC_URL"
        }
      ]
    },
    "targets": {
      "build": {
        "inputs": [
          "default",
          "env"
        ],
        "outputs": [
          "{workspaceRoot}/dist"
        ]
      },
      "dev": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
