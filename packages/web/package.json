{
  "name": "@ootmm/web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "./deploy.sh"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "preact": "^10.28.4",
    "preact-iso": "^2.11.1",
    "react-icons": "^5.5.0",
    "reset-css": "^5.0.2",
    "tailwindcss": "^4.2.1"
  },
  "devDependencies": {
    "@mdx-js/rollup": "^3.1.1",
    "@ootmm/web-components": "*",
    "@preact/preset-vite": "^2.10.3",
    "@tailwindcss/vite": "^4.2.1",
    "typescript": "^5.9.3",
    "vite-multiple-assets": "^2.2.6"
  },
  "nx": {
    "targets": {
      "build": {
        "inputs": [
          "{projectRoot}/**/*",
          {
            "env": "STATIC_URL"
          }
        ],
        "outputs": [
          "{projectRoot}/dist/**/*"
        ],
        "dependsOn": []
      },
      "dev": {
        "inputs": [
          "{projectRoot}/**/*",
          {
            "env": "STATIC_URL"
          }
        ],
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
